[
  {
    "context": "VimControl && !menu",
    "bindings": {
      // mnei를 방향키로 매핑
      "m": "vim::Left", // 왼쪽
      "n": "vim::Down", // 아래
      "e": "vim::Up", // 위
      "i": "vim::Right", // 오른쪽
      // u를 insert mode 전환으로 매핑 (원래 i의 기능)
      "u": "vim::InsertBefore"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      // Visual mode에서도 동일한 방향키 적용
      "m": "vim::WrappingLeft",
      "n": "vim::Down",
      "e": "vim::Up",
      "i": "vim::WrappingRight"
    }
  },
  {
    "context": "Editor&&vim_mode==normal",
    "bindings": {
      "u": "vim::Undo",
      ", h": "workspace::ToggleLeftDock",
      "F4": "workspace::NewCenterTerminal",
      "s s": "editor::DeleteLine",
      "j": "vim::Yank",
      ":": "vim::Paste",
      "gg": "vim::StartOfDocument",
      "G": "vim::EndOfDocument",
      ";": "command_palette::Toggle",
      "f": "vim::NextWordEnd",
      "z": "vim::PreviousWordStart",
      "space o": "outline::Toggle",
      "space v": "editor::GoToDefinition",
      "space t f": "file_finder::Toggle",
      "k": "search::SelectNextMatch",
      "shift-k": "search::SelectPreviousMatch",
      "ctrl e": "editor::MoveLineUp",
      "ctrl n": "editor::MoveLineDown",
      "g c c": "editor::ToggleComments",
      "s v": "pane::SplitLeft",
      "s h": "pane::SplitHorizontal",
      "ctrl-w": "pane::CloseActiveItem",
      "f1": "panel::NextPanelTab",
      "ctrl-b-m": "workspace::ActivatePaneLeft",
      "ctrl-b-i": "workspace::ActivatePaneRight"
    }
  },

  // Normal Mode Bindings
  //
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "n": "menu::SelectNext",
      "e": "menu::SelectPrevious"
    }
  },
  {
    "context": "OutlinePanel",
    "bindings": {
      "n": "menu::SelectNext",
      "e": "menu::SelectPrevious",
      "shift-g": "menu::SelectLast",
      "g g": "menu::SelectFirst"
    }
  },

  // Normal Mode Bindings
  //

  {
    "context": "Dock || Terminal || Editor",
    "bindings": {
      "ctrl-m": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-e": "workspace::ActivatePaneUp",
      "ctrl-n": "workspace::ActivatePaneDown"
    }
  }
]

